<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatissample.repository.BookRepository">
    <insert id="saveBook" parameterType="com.example.booksellerapp.entity.Book">
        <![CDATA[
            insert into book_seller_sc.book values(
                #{id},
                #{name},
                #{description},
                #{price},
                #{createdTime},
                #{updatedTime}
            )
        ]]>
    </insert>

    <select id="getAllBooks" parameterType="string" resultMap="bookDetails">
        <![CDATA[
            select * from book_seller_sc.book
        ]]>
    </select>

    <resultMap id="bookDetails" type="com.example.booksellerapp.entity.Book">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="description" column="description" />
        <result property="price" column="price" />
        <result property="createdTime" column="created_time" />
        <result property="updatedTime" column="updated_time" />
    </resultMap>

    <delete id="deleteBookById" parameterType="string">
        <![CDATA[
            delete from book_seller_sc.book where id = #{id}
        ]]>
    </delete>
</mapper>